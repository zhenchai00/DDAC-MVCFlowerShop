@model List<FlowerTable>

<center>
    <h1>Flower List Table</h1>
    <br/>
    <p>
        <button class="btn-dark">
            <a asp-action="AddData" asp-controller="FlowerList">
                Insert New Flower
            </a>
        </button>
    </p>
    <hr />
    <br />
    <table border="1">
        <tr style="background-color: yellow; text-align:center;">
            <th>Flower Id</th>
            <th>Flower Name</th>
            <th>Flower Price</th>
            <th>Flower Produced Date</th>
            <th>Flower Type</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @if (Model.Count != 0)
        {
            @foreach (var flower in Model)
            {
                <tr>
                    <td>@flower.FlowerId</td>
                    <td>@flower.FlowerName</td>
                    <td>@flower.FlowerPrice</td>
                    <td>@flower.FlowerProducedDate</td>
                    <td>@flower.FlowerType</td>
                    <form asp-action="DeleteData" asp-controller="FlowerList" asp-route-FlowerId="@flower.FlowerId">
                    <td><button asp-action="EditData" asp-controller="FlowerList" asp-route-FlowerId="@flower.FlowerId">Edit</button></td>
                        <td><button>Delete</button></td>
                    </form>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No data found!</td>
            </tr>
        }
    </table>
</center>