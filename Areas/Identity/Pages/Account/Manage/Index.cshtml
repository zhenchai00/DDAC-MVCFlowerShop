@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CustomerFullName" class="form-control" placeholder="Please enter your full name follow by IC." />
                <label asp-for="Input.CustomerFullName" class="form-label"></label>
                <span asp-validation-for="Input.CustomerFullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CustomerAge" class="form-control" placeholder="Please enter your age." />
                <label asp-for="Input.CustomerAge" class="form-label"></label>
                <span asp-validation-for="Input.CustomerAge" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CustomerDoB" class="form-control" placeholder="Please enter your date of birth follow by IC." />
                <label asp-for="Input.CustomerDoB" class="form-label"></label>
                <span asp-validation-for="Input.CustomerDoB" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CustomerAddress" class="form-control" placeholder="Please enter your address." />
                <label asp-for="Input.CustomerAddress" class="form-label"></label>
                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
